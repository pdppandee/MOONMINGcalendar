<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moon_bg"
    android:padding="20dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ueDelete"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/ulDelete"
        app:strokeColor="@color/purple_dark"
        app:strokeWidth="2dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:fontFamily="@font/kanit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ueEdit"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/ulEdit"
        app:strokeColor="@color/purple_dark"
        app:strokeWidth="2dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:fontFamily="@font/kanit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ueBack"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit"
        android:text="กลับ"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:strokeColor="@color/purple_dark"
        app:strokeWidth="2dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="381dp"
        android:layout_height="42dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024">

        <TextView
            android:id="@+id/date"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/kanit"
            android:text="วันที่:"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/editeventDate"
            android:layout_width="279dp"
            android:layout_height="34dp"
            android:fontFamily="@font/kanit"
            android:text="@string/ulDate"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="381dp"
        android:layout_height="46dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/name"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit"
            android:text="กิจกรรม:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/eventName"
            android:layout_width="285dp"
            android:layout_height="42dp"
            android:fontFamily="@font/kanit"
            android:text="@string/eventName"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="380dp"
        android:layout_height="41dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/detail"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit"
            android:text="รายละเอียด:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/eventDetail"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit"
            android:text="TextView"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="38dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/time"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit"
            android:text="เวลา:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/eventTime"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit"
            android:text="TextView"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>